{
  "checks":{
    "rabbitmq-alive": {
      "command":"check-rabbitmq-alive.rb --host {{ .Env.RABBITMQ_HOST  }} --username {{ .Env.RABBITMQ_USER }} --password {{ .Env.RABBITMQ_PASS }}",
      "occurrences":2,
      "publish":true,
      "interval":10,
      "subscribers": ["rabbitmq"]
    },
    "rabbitmq-cluster-health": {
      "command":"check-rabbitmq-cluster-health.rb --host {{ .Env.RABBITMQ_HOST  }} --username {{ .Env.RABBITMQ_USER }} --password {{ .Env.RABBITMQ_PASS }}",
      "occurrences":2,
      "publish":true,
      "interval":10,
      "subscribers": ["rabbitmq"]
    },
    "rabbitmq-queue-drain-time": {
      "command":"check-rabbitmq-queue-drain-time.rb --host {{ .Env.RABBITMQ_HOST  }} --user {{ .Env.RABBITMQ_USER }} --password {{ .Env.RABBITMQ_PASS }} -w 180 -c 360",
      "occurrences":2,
      "publish":true,
      "interval":10,
      "subscribers": ["rabbitmq"]
    }
  }
}
